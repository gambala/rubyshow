<div class="col-md-6 col-md-offset-3">
  <%= form_for @course, html: { class: 'form-horizontal center' } do |f| %>
    <div id="error_explanation">
      <% if @course.errors.any? %>
         <h3>Возникли следующие ошибки:</h3>
         <ul>
           <% @course.errors.full_messages.each do |msg| %>
             <li> * <%= msg %></li>
           <% end %>
         </ul>
        <% end %>
    </div>
    <div class='form-group'>
      <%= f.label :title, 'Название' %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :url, 'Ссылка на курс' %><br>
      <%= f.text_field :url, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :description, 'Описание' %><br>
      <%= f.text_area :description, rows: 10, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <div class="col-md-6">
        <%= f.label :language, 'Язык' %><br>
        <%= f.select(:language, %w(Русский English), {}, { class: 'form-control' }) %>
      </div>
      <div class="col-md-6">
        <%= f.label :paid, 'Доступность курса' %><br>
        <% [{ 'Платный' => true }, { 'Бесплатный' => false }].each do |hash| %>
          <label>
            <%= hash.keys.first.to_s %>
            <%= f.radio_button(:paid, hash.values.first) %>
          </label>
        <% end %>

      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
