<h1 class='text-center'><%= @type %></h1>
<div class="col-md-12">
  <table class='table table-bordered table-hover'>
    <thead>
      <tr>
      </tr>
      <tr>
        <th>#</th>
        <th>Название</th>
        <th>Язык</th>
        <th>Платность</th>
        <th>Количество учеников</th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each.with_index(1) do |course, index| %>
        <tr>
          <td><%= index %></td>
          <td>
            <%= link_to course.title, course %>
            <span class="rating" data-toggle='tooltip' data-placement='top' title='Средний рейтинг курса'>
              <%= rating_in_gems(course.rating) %>
            </span>
          </td>
          <td><%= course.language %></td>
          <td><%= course.paid? ? 'Платный' : 'Бесплатный' %></td>
          <td>
            <%= course.comments.pluck(:graduate).count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
